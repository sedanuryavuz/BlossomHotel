@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.StaffId</th>
            <td>@item.Fullname</td>
            <td>@item.WorkDepartment</td>
            <td><a href="/AdminStaff/DeleteStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/AdminStaff/UpdateStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            <td><a href="/AdminStaff/UpdateStaff/@item.StaffId" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/AdminStaff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-info">Yeni personel girişi</a>

