@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Personel Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

    <label>Personel Soyadı</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />

    <label>Personel Ünvanı</label>
    <input type="text" asp-for="WorkDepartment" class="form-control" />
    <span asp-validation-for="WorkDepartment" class="text-danger"></span>
    <br />

    <label>Personel Cinsiyet</label>
    <input type="text" asp-for="Gender" class="form-control" />
    <span asp-validation-for="Gender" class="text-danger"></span>
    <br />

    <label>Otel Seç</label>
    <select asp-for="HotelId" class="form-control">
        <option value="">Seçiniz</option>
        @if (Model?.Hotels != null && Model.Hotels.Any())
        {
            foreach (var hotel in Model.Hotels)
            {
                <option value="@hotel.Value">@hotel.Text</option>
            }
        }
        else
        {
            <option disabled>Otel listesi boş.</option>
        }
    </select>
    <span asp-validation-for="HotelId" class="text-danger"></span>

    <br />
    <button class="btn btn-primary">Personeli Ekle</button>
</form>



