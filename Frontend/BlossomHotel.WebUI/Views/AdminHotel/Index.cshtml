@model List<ResultHotelDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Otel Adı</th>
        <th>Adres</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.HotelName</td>
            <td>@item.Address</td>
            <td>@item.Description</td>
            <td><a href="/AdminHotel/DeleteHotel/@item.HotelId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/AdminHotel/UpdateHotel/@item.HotelId" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/AdminHotel/AddHotel/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Otel Girişi</a>
