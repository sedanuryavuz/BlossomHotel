@model BlossomHotel.WebUI.Models.User.ChangePasswordViewModel

@{
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Şifre Değiştir";
    var successMessage = TempData["Success"] as string;
}
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li style=" list-style: none;">@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<h2>@ViewData["Title"]</h2>

<div class="admin-password-change-form" style="max-width: 400px; margin: auto;">
    <form asp-action="ChangePassword" method="post">
        <div class="mb-3">
            <label for="OldPassword" class="form-label">Mevcut Şifre:</label>
            <input type="password" class="form-control" id="OldPassword" asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="NewPassword" class="form-label">Yeni Şifre:</label>
            <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="ConfirmPassword" class="form-label">Yeni Şifre Tekrar:</label>
            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100" style="background-color: #60636c">Şifreyi Güncelle</button>
    </form>
</div>
