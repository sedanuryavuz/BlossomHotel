@model LoginUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Giriş</title>
    <link rel="icon" href="~/adminweb/images/logo/miniLogo.png" type="image/x-icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminweb/style.css" rel="stylesheet">
    <style>
        body, html {
          height: 100%;
          margin: 0;
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: url('/adminweb/images/rand/admin_giris.jpg') no-repeat center center fixed;
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h2 class="login-title">ADMİN GİRİŞ</h2>
                <form asp-controller="AdminLogin" asp-action="Index" method="post">
                <input type="text" class="form-control mb-3" placeholder="Kullanıcı Adınız" asp-for="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
                <input type="password" class="form-control mb-4" placeholder="•••" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit" class="btn btn-login w-100">giriş yap</button>
            </form>
        </div>
    </div>
</body>
</html>
